            <!--</LinearLayout>-->



            <LinearLayout
                android:layout_gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="5dp"
                        android:src="@drawable/ic_shoes" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="5dp"
                        android:src="@drawable/ic_start_points" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="5dp"
                        android:src="@drawable/ic_level_cup" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:background="@color/green7"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5dp"
                        android:text="@string/matches"
                        android:textSize="15dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5dp"
                        android:text="@string/points"
                        android:textSize="15dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/level"
                        android:textSize="15dp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="5dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="0"
                        android:textColor="@color/colorPrimaryDark"
                        android:textSize="15dp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/txt_margin"
                        android:text="0"
                        android:textColor="@color/colorPrimaryDark"
                        android:textSize="15dp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/divider"
                        android:text="0"
                        android:textColor="@color/colorPrimaryDark"
                        android:textSize="15dp" />

                </LinearLayout>


            </LinearLayout>


        </LinearLayout>

    </LinearLayout>

    <RelativeLayout
        android:layout_gravity="center_horizontal"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_marginStart="@dimen/txt_margin"
        android:layout_marginTop="10dp"
        android:orientation="vertical"
        android:background="@drawable/round_green_btn">

        <!--android:drawableStart="@drawable/ic_add_friend"-->
        <TextView
            android:textAllCaps="false"
            android:textSize="12sp"
            android:textColor="@color/green5"
            android:text="@string/add"
            android:background="@android:color/transparent"
            android:layout_centerVertical="true"
            android:layout_marginBottom="2dp"
            android:id="@+id/addFriendBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dimen_10"
            android:layout_marginEnd="0dp"/>

        <ImageView
            android:id="@+id/addFriendLine"
            android:layout_marginStart="@dimen/dimen_10"
            android:layout_width="1dp"
            android:layout_height="25dp"
            android:layout_centerVertical="true"
            android:background="@color/green5"
            android:layout_toEndOf="@id/addFriendBtn"/>

        <ImageView
            android:layout_toEndOf="@id/addFriendLine"
            android:layout_centerVertical="true"
            android:layout_marginBottom="2dp"
            android:id="@+id/messageBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_message"
            android:layout_marginTop="3dp"
            android:layout_marginStart="@dimen/dimen_10"
            android:layout_marginEnd="0dp"/>

        <ImageView
            android:id="@+id/messageLine"
            android:layout_marginStart="@dimen/dimen_10"
            android:layout_width="1dp"
            android:layout_height="25dp"
            android:layout_centerVertical="true"
            android:background="@color/green5"
            android:layout_toEndOf="@id/messageBtn"/>

        <ImageView
            android:layout_toEndOf="@id/messageLine"
            android:layout_centerVertical="true"
            android:layout_marginBottom="2dp"
            android:id="@+id/vsBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_vs"
            android:layout_marginStart="@dimen/dimen_10"
            android:layout_marginEnd="@dimen/dimen_10"/>

        <ImageView
            android:id="@+id/vsLine"
            android:layout_marginStart="2dp"
            android:layout_width="1dp"
            android:layout_height="25dp"
            android:layout_centerVertical="true"
            android:background="@color/green5"
            android:layout_toEndOf="@id/vsBtn"/>

        <ImageView
            android:layout_toEndOf="@id/vsLine"
            android:layout_centerVertical="true"
            android:layout_marginBottom="2dp"
            android:id="@+id/friendsBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_friends"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="0dp"/>

        <ImageView
            android:id="@+id/friendsLine"
            android:layout_marginStart="9dp"
            android:layout_width="1dp"
            android:layout_height="25dp"
            android:layout_centerVertical="true"
            android:background="@color/green5"
            android:layout_toEndOf="@id/friendsBtn"/>

        <ImageView
            android:layout_toEndOf="@id/friendsLine"
            android:layout_centerVertical="true"
            android:layout_marginBottom="2dp"
            android:id="@+id/plusBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_plus_calender"
            android:layout_marginStart="0dp"
            android:layout_marginEnd="0dp"/>

        <ImageView
            android:id="@+id/plusLine"
            android:layout_marginStart="0dp"
            android:layout_width="1dp"
            android:layout_height="25dp"
            android:layout_centerVertical="true"
            android:background="@color/green5"
            android:layout_toEndOf="@id/plusBtn"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:text="@string/invite"
            android:layout_toEndOf="@id/plusLine"
            android:layout_centerVertical="true"
            android:textColor="@color/green5"
            android:layout_marginEnd="10dp"
            android:layout_marginStart="@dimen/dimen_10"/>



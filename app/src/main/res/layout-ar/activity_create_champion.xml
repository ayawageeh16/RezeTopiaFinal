<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activities.CreateChampion">

    <ImageView
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:src="@drawable/rezetopia"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/dimen_20"/>

    <TextView
        android:textColor="@color/green2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="23sp"
        android:text="@string/rezetopia"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp"/>

    <EditText
        android:layout_marginTop="@dimen/dimen_10"
        android:layout_marginStart="@dimen/dimen_20"
        android:layout_marginEnd="@dimen/dimen_20"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@drawable/edit_border"
        android:hint="@string/name"
        android:paddingStart="@dimen/dimen_20"
        android:textColor="@color/black" />

    <com.jaredrummler.materialspinner.MaterialSpinner
        android:layout_marginTop="@dimen/dimen_10"
        android:layout_marginStart="@dimen/dimen_20"
        android:layout_marginEnd="@dimen/dimen_20"
        android:id="@+id/type_spinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/edit_border"
        />

    <LinearLayout
        android:gravity="center"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/dimen_10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="2">

        <LinearLayout
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/number_of_matches"
                android:textSize="14sp"/>

            <LinearLayout
                android:layout_gravity="center_horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:background="@drawable/green_back">

                <TextView
                    android:id="@+id/txt_decr1"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:textAlignment="center"
                    android:textColor="#FFFFFF"
                    android:textSize="25sp"
                    android:text="-" />

                <TextView
                    android:layout_marginBottom="3dp"
                    android:id="@+id/txt_count1"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:text="0"
                    android:textAlignment="center"
                    android:textColor="#FFFFFF"
                    android:textSize="25sp"
                    android:textStyle="bold" />


                <TextView
                    android:layout_marginTop="3dp"
                    android:layout_gravity="center_vertical"
                    android:id="@+id/txt_incr1"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:text="+"
                    android:textAlignment="center"
                    android:textColor="@android:color/white"
                    android:textSize="20sp" />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/number_of_matches"
                android:textSize="14sp"/>

            <LinearLayout
                android:layout_gravity="center_horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:background="@drawable/green_back">

                <TextView
                    android:layout_marginTop="3dp"
                    android:layout_gravity="center_vertical"
                    android:id="@+id/txt_decr2"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:textAlignment="center"
                    android:textColor="#FFFFFF"
                    android:textSize="20sp"
                    android:text="-"/>

                <TextView
                    android:layout_marginBottom="2dp"
                    android:id="@+id/txt_count2"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:text="0"
                    android:textAlignment="center"
                    android:textColor="#FFFFFF"
                    android:textSize="25sp"
                    android:textStyle="bold" />


                <TextView
                    android:layout_marginTop="3dp"
                    android:layout_gravity="center_vertical"
                    android:id="@+id/txt_incr2"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:text="+"
                    android:textAlignment="center"
                    android:textColor="@android:color/white"
                    android:textSize="20sp" />
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>


    <com.jaredrummler.materialspinner.MaterialSpinner
        android:layout_marginTop="@dimen/dimen_10"
        android:layout_marginStart="@dimen/dimen_20"
        android:layout_marginEnd="@dimen/dimen_20"
        android:id="@+id/home_away_spinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/edit_border"
    />

    <Button
        android:layout_marginTop="@dimen/dimen_10"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:background="@drawable/round_green_btn"
        android:text="@string/create"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:layout_gravity="center_horizontal"/>

</LinearLayout>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingStart="@dimen/dimen_10"
    android:paddingEnd="@dimen/dimen_10"
    android:paddingTop="5dp"
    android:paddingBottom="5dp"
    android:background="@color/colorPrimary">

    <ImageButton
        android:id="@+id/imageButton"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:src="@drawable/ic_fir_ball"
        android:background="@android:color/transparent"/>

    <ImageView
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_gravity="center_vertical"
        android:id="@+id/searchBackView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_back_white_ar"
        android:layout_marginEnd="@dimen/dimen_10"
        android:layout_marginRight="@dimen/dimen_10"

        android:visibility="gone"/>


    <ImageButton
        android:id="@+id/searchIcon"
        android:layout_width="50dp"
        android:layout_height="34dp"
        android:layout_centerVertical="true"
        android:layout_marginStart="0dp"
        android:layout_marginLeft="0dp"
        android:layout_marginEnd="2dp"
        android:layout_marginRight="2dp"
        android:layout_toRightOf="@+id/searchBackView"
        android:layout_toEndOf="@id/searchBackView"
        android:background="@drawable/seaico_round"
        android:src="@drawable/ic_search_white"
        />

    <EditText
        android:textCursorDrawable="@android:color/transparent"
        android:layout_centerInParent="true"
        android:id="@+id/searchbox"
        android:layout_marginRight="2dp"
        android:layout_marginEnd="2dp"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/searchIcon"
        android:layout_alignTop="@+id/searchIcon"
        android:layout_toEndOf="@+id/searchIcon"
        android:layout_toRightOf="@id/searchIcon"
        android:background="@drawable/search_round"
        android:focusableInTouchMode="true"
        android:hint="@string/search"
        android:inputType="textPersonName"
        android:paddingBottom="5dp"
        android:paddingEnd="5dp"
        android:paddingRight="5dp"
        android:paddingStart="15dp"
        android:paddingLeft="15dp"
        android:paddingTop="5dp"
        android:text=""
        android:textColor="@color/white"
        android:textColorHint="@color/white" />


</RelativeLayout>